#include "main.h"

/**
 * print_diagonal - Prints diagonals on the screen
 *
 * @n: the number of times \ will be printed.
 *
 * Return: Always 0.
 */
void print_diagonal(int n)
{
	int i;

	if (n <= 0)
		_putchar('\n');
	else
	{
		for (i = 0; i < n; i++)
		{
			_putchar('\\');
			_putchar('\n');
		}
	}
}
